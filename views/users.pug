extends layout

block content
  div(class='users__container')
    div(class='users__panel') Welcome, #{name}.
      button(class='button') LOGOUT
    div(class='users__title') LIST OF USERS
    div(class='users__single users__legend')
      div first name
      div last name
      div login
      div password
    each user, i in users
      div(class='users__single' name=user.login)
        div #{user.firstName}
        div #{user.lastName}
        div #{user.login}
        div #{user.pass}
        button
          a(href=`/edit?init=true&edit=true&first-name=${user.firstName}&last-name=${user.lastName}&login=${user.login}&pass=${user.pass}`)
            i(class='fas fa-edit')
        button
          a(href=`/delete?login=${user.login}`)
            i(class='fas fa-trash-alt')
    div(class='users__end')
      a(class='button' href='/edit?init=true&add=true') NEW USER